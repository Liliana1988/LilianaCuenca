<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LilianaCuenca.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Login " HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario "></Entry>
        <Entry x:Name="txtPass" IsPassword="True" Placeholder="Ingrese Contraseña"> </Entry>

        <Button x:Name="btnAbrir"
                Text=" REGISTRO"
                Clicked="btnAbrir_Clicked"/>
        




    </StackLayout>

</ContentPage>
